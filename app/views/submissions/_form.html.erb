<%= form_for @submission, :remote => true do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="cfx">
    <div class="form_row">
      <%= f.text_field :first_name, :placeholder => 'First Name' %>
      <%= f.text_field :last_name, :placeholder => 'Last Name', :class => 'right' %>
    </div>
    <div class="form_row">
      <%= f.text_field :email, :placeholder => 'Email' %>

      <%= f.collection_select :branch, Branch.all, :name, :name, :placeholder => 'Branch Location', :class => 'right' %>
    </div>
  </div>
  <a href="#" class="btn take_the_quiz submit">Take The Quiz</a>

<% end %>
