<h1>Listing submissions</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Branch</th>
    <th>Score</th>
    <th>Prize code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.first_name %></td>
    <td><%= submission.last_name %></td>
    <td><%= submission.email %></td>
    <td><%= submission.branch %></td>
    <td><%= submission.score %></td>
    <td><%= submission.prize_code %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

